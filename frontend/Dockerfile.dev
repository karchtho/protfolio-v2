FROM node:24-alpine

WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy Angular config files (needed for ng serve to work)
COPY angular.json tsconfig.json tsconfig.app.json tsconfig.spec.json proxy.conf.json ./

# Source code is mounted via volume, not copied
# This allows hot-reload to work properly

EXPOSE 4200

CMD ["npm", "run", "start", "--", "--host", "0.0.0.0", "--poll", "2000"]
